  <div class="card-container-profiles">
    <% @friends_profiles.each do |friend_profile| %>
      <%= link_to friend_profile_path(friend_profile) do %>
      <% total_earnings = friend_profile.day_rate * friend_profile.bookings.count %>
      <div class="card mb-3">
      <img src="https://t4.ftcdn.net/jpg/08/09/09/83/360_F_809098361_z45jKPDGsYymmTJcFQvp3VGTPgGuY35L.jpg" class="card-img-top" alt="...">
      <div class="card-body">
      <h2 class=""><%= friend_profile.username %></h2>
          <p class="card-text"> Interest: <%= friend_profile.interest %></p>
          <p class="card-text"> Price per day: <%= friend_profile.day_rate.round(2) %> €</p>
          <p class="card-text"> Date created: <%= friend_profile.created_at.strftime("%d/%m/%Y") %></p>
          <p class="card-text"> Times booked: <%= friend_profile.bookings.count %></p>
          <p class="card-text"> Total earnings: <%= total_earnings.round(2) %> €</p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

