<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" data-controller="search-bar" data-action="input->search-bar#search" />
    <button name="button" type="submit" class="btn btn-flat" id="searchbar-text">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
